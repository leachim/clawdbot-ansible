# Copy to secrets.yml and fill in your values
# playbook will fail if this file is missing or required values are empty

# REQUIRED: Data storage path on mounted volume
openclaw_data_dir: "/mnt/HC_Volume_XXXXX/OpenClaw"

# REQUIRED: SSH public keys for openclaw user access
clawdbot_ssh_keys:
  - "ssh-rsa AAAA... user@host"

# OPTIONAL: Tailscale auth key for auto-connect (leave empty to skip)
tailscale_authkey: ""
